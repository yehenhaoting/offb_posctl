cmake_minimum_required(VERSION 2.8.3)
project(offb_posctl)

## Compile as C++11, supported in ROS Kinetic and newer
# add_compile_options(-std=c++11)

## Find catkin macros and libraries
## if COMPONENTS list like find_package(catkin REQUIRED COMPONENTS xyz)
## is used, also find other catkin packages
find_package(catkin REQUIRED COMPONENTS
  geometry_msgs
  std_msgs
  mavros
  roscpp
  rospy
)

catkin_package(

)

include_directories(
        ${catkin_INCLUDE_DIRS}
        src/)

add_library(thelib
        src/Parameter.h
        src/Parameter.cpp
        src/PID.h
        src/PID.cpp)

add_library(thelib2
        src/Parameter_viconRot.h
        src/Parameter_viconRot.cpp
        src/PID.h
        src/PID.cpp)

add_executable(offb_posctl
        src/offb_posctl.cpp)
target_link_libraries(offb_posctl ${catkin_LIBRARIES} thelib)

add_executable(offb_posctl_chg
        src/offb_posctl_chg.cpp)
target_link_libraries(offb_posctl_chg ${catkin_LIBRARIES} thelib)

add_executable(offb_posctl_viconRot
        src/offb_posctl_viconRot.cpp)
target_link_libraries(offb_posctl_viconRot ${catkin_LIBRARIES} thelib2)


add_executable(offb_posctl_chg_tracking
        src/offb_posctl_chg_tracking.cpp)
target_link_libraries(offb_posctl_chg_tracking ${catkin_LIBRARIES} thelib)

#add_dependencies(offb_posctl offb_posctl_generate_messages_cpp)

